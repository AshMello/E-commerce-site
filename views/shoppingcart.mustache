<!DOCTYPE html>
<html>
  <head>

    <title>Cart</title>
    {{> meta}}
    <link rel="stylesheet" href="/styles/cart.css">
  </head>
  <body>
  {{> menu}}

<div class="container-cart">
<h1 class="title">••• Cart •••</h1>
{{^cartItems}}
<h5 class="emptyMessage">Your cart is currently empty. <a href="/">Click here</a> to continue shopping.</h5>
{{/cartItems}}
<div id="cartTable">
  <table>
    <thead>
      <tr>
        <th class="head column" scope="col"></th>
        <th class="head column" scope="col">Name</th>
        <th class="head column" scope="col">Price</th>
        <th class="head column" scope="col">Remove</th>
      </tr>
    </thead>
    {{#cartItems}}
    <tbody id="cartItem">
      <tr>
        <td class="column"><img class="thumbnail" src="{{thumbnail}}"></span></td>
        <td class="column"><h5>{{name}}</h5></td>
        <td class="column"><h5>${{price}}</h5></td>
        <td class="column"><form action="/delete-item/{{id}}" method="POST">
          <input type="hidden" name="id" value={{id}} />
          <button class="btn" type="submit">Remove</button>
        </form></td>
      </tr>
      {{/cartItems}}
      <tr>
        <td class="column"><h5>Flat Rate Shipping</h5></td>
        <td class="column"></td>
        <td class="column"><h5>$10</h5></td>
        <td class="column"></td>
      </tr>
      <tr>
        <td class="head column"><h5>Total</h5></td>
        <td class="head column"></td>
        <td class="head column"><h5>${{total}}</h5></td>
        <td class="head column"></td>
      </tr>
      <tr>
        <td class="column"></td>
        <td class="column"></td>
        <td class="column"></td>
        <td class="column"><a href="/checkout"><button class="btn">Checkout</button></a></td>
      </tr>
      </tbody>
</table>
</div>

